    </servlet>
    <servlet-mapping>
        <servlet-name>Ban_servlet</servlet-name>
        <url-pattern>/Ban_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NhanVien_servlet</servlet-name>
        <url-pattern>/NhanVien_servlet</url-pattern>
