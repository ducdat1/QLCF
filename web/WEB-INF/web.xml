        <servlet-name>ThucUong_servlet</servlet-name>
        <url-pattern>/ThucUong_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChiTietBan_servlet</servlet-name>
        <url-pattern>/ChiTietBan_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cart_servlet</servlet-name>
        <url-pattern>/cart_servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
